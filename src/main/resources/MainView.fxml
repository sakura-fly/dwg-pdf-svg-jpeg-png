<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.ss.cad.controller.MainController"
            prefHeight="400.0" prefWidth="600.0">
    <HBox>
        <Button fx:id="srcBtn" onMouseClicked="#openSrc" text="选择源文件目录"/>
        <Label fx:id="srcStr"/>
    </HBox>
    <HBox>
        <Button fx:id="srcFileBtn" onMouseClicked="#openFileSrc" text="选择源文件"/>
        <Label fx:id="srcFileStr"/>
    </HBox>
    <HBox>
        <Button fx:id="outBtn" onMouseClicked="#openOut" text="选择输出目录"/>
        <Label fx:id="outStr"/>
    </HBox>
    <Button text="批量转换" fx:id="doIt" onMouseClicked="#doIt"/>
    <Button text="单个转换" fx:id="doOne" onMouseClicked="#doOne"/>
    <TextArea fx:id="resultText"/>
</VBox>
